{
  "name": "action-agent",
  "version": "1.0.0",
  "description": "ActionAgent: A Microsoft Teams bot that extracts action items from meeting transcripts using Azure OpenAI and creates work items in Azure DevOps",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "demo": "ts-node src/demo.ts",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "package": "npm run build && cd appPackage && zip -r ../actionagent.zip *"
  },
  "keywords": [
    "microsoft-teams",
    "bot",
    "azure-openai",
    "azure-devops",
    "microsoft-graph",
    "meeting-transcripts",
    "action-items",
    "gpt-4",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JackAmichai/ActionAgent.git"
  },
  "dependencies": {
    "@azure/identity": "^4.2.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "azure-devops-node-api": "^12.5.0",
    "botbuilder": "^4.22.1",
    "dotenv": "^16.4.1",
    "isomorphic-fetch": "^3.0.0",
    "openai": "^4.28.0",
    "restify": "^11.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/restify": "^8.5.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
